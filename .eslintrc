{
  "extends": "eslint:recommended",
  "env": {
    "commonjs": true,
    "browser": true,
    "jquery": true,
    "mocha": true,
    "node": true,
    "amd": true
  },

  "globals": {
    "io": true,
    "App": true,
    "RTCMultiConnection": true,
    "getAudioElement": true,
    "getMediaElement": true,
    "RTCPeerConnection": true,
    "mozRTCPeerConnection": true,
    "mozRTCSessionDescription": true,
    "mozRTCIceCandidate": true,
    "webkitMediaStream": true,
    "webkitRTCPeerConnection": true,
    "viconConfig": true,
    "Uint32Array": true,
    "MediaStream": true,
    "easyrtc": true
  },
  "rules": {
    "radix": 2,
    "eqeqeq": 2,
    "no-eval": 2,
    "no-with": 2,
    "no-console": 0,
    "no-unused-vars": 1,
    "yoda": [2, "never"],
    "strict": [2, "global"]
  }
}
